<map proto="1.4.2">
<name>Towers Bridge - Mario</name>
<version>1.0.0</version>
<created>2024-05-29</created>
<objective>Score 10 points to win.</objective>
<gamemode>scorebox</gamemode>
<phase>development</phase>
<authors>
    <author uuid="0cd8d8fe-8baf-4603-9ea3-4214283b9592"/> <!-- nicolieeee -->
</authors>
<teams>
    <team id="blue-team" color="dark blue" max="8">Blue</team>
    <team id="red-team" color="dark red" max="8">Red</team>
</teams>
<kits>
    <kit id="spawn-kit">
        <max-health>20</max-health>
        <item slot="0" unbreakable="true" material="stone sword"/>
        <item slot="1" unbreakable="true" material="bow"/>
        <item slot="2" unbreakable="true" material="iron pickaxe"/>
        <item slot="3" amount="64" material="brick"/>
        <item slot="4" amount="1" material="golden apple"/>
        <item slot="8" amount="8" material="arrow"/>
        <helmet team-color="true" unbreakable="true" material="leather helmet"/>
        <chestplate team-color="true" unbreakable="true" material="leather chestplate"/>
        <leggings team-color="true" unbreakable="true" enchantment="protection projectile:2" material="chainmail leggings"/>
        <boots team-color="true" unbreakable="true" material="chainmail boots"/>
        <clear/>
    </kit>
    <kit id="instakill">
        <max-health>1</max-health>
    </kit>
</kits>
<maxbuildheight>32</maxbuildheight>
<spawns>
    <spawn team="blue-team" kit="spawn-kit" region="blue-spawn-point" yaw="90"/>
    <spawn team="red-team" kit="spawn-kit" region="red-spawn-point" yaw="-90"/>
    <default yaw="180">
        <regions>
            <point>70.5,27,60.5</point>
        </regions>
    </default>
</spawns>
<filters>
    <team id="only-blue">blue-team</team>
    <team id="only-red">red-team</team>
    <material id="brick">brick</material>
</filters>
<regions>
    <point id="blue-spawn-point">104.5,33,60.5</point>
    <point id="red-spawn-point">36.5,33,60.5</point>
    <point id="void2">0, -64, 0</point>
    <union id="spawns">
        <cuboid id="blue-spawn-room" min="102,33,58" max="107,38,62"/>
        <cuboid id="red-spawn-room" min="33,33,58" max="39,38,62"/>
        <cuboid id="sky" min="42,30,-oo" max="99,oo,oo"/>
    </union>
    <union id="scoreboxes">
        <cuboid id="blue-scorebox" min="104,25,59" max="107,25.5,62"/>
        <cuboid id="red-scorebox" min="34,25,59" max="37,25.5,62"/>
    </union>
    <union id="void">
        <cuboid id="void1" min="-oo,-oo,-oo" max="oo,15,oo"/>
    </union>
    <!-- applications -->
    <apply region="spawns" block="never" message="You may not build here!"/>
    <apply block="never" message="You may not build in the void!">
        <region>
            <rectangle min="112,oo" max="oo,-oo"/>
            <rectangle min="29,oo" max="-oo,-oo"/>
            <rectangle min="oo,82" max="-oo,oo"/>
            <rectangle min="oo,39" max="-oo,-oo"/>
        </region>
    </apply>
    <apply block="deny(not(brick))"/>
    <apply region="void1" lend-kit="instakill"/>
</regions>
<score>
    <limit>10</limit>
    <box value="1" filter="only-red" region="blue-scorebox"/>
    <box value="1" filter="only-blue" region="red-scorebox"/>
</score>
<time result="objectives" overtime="5m" max-overtime="0s">10m</time>
<portals pitch="@0">
    <portal filter="only-red" region="blue-scorebox" destination="red-spawn-point" yaw="@-90"/>
    <portal filter="only-blue" region="red-scorebox" destination="blue-spawn-point" yaw="@90"/>
    <portal region="void1" destination="void2" sound="false"/>
</portals>
<toolrepair>
    <tool>stone sword</tool>
    <tool>iron pickaxe</tool>
    <tool>bow</tool>
</toolrepair>
<itemremove>
    <item>leather helmet</item>
    <item>leather chestplate</item>
    <item>chainmail leggings</item>
    <item>chainmail boots</item>
</itemremove>
<itemkeep>
    <item>golden apple</item>
    <item>brick</item>
    <item>arrow</item>
</itemkeep>
<kill-rewards>
    <kill-reward>
	    <item amount="1" material="golden apple"/>
        <item amount="16" material="brick"/>
       	<item amount="4" material="arrow"/>
    </kill-reward>
</kill-rewards>
<hunger>
    <depletion>off</depletion>
</hunger>
<renewables>
    <renewable region = "everywhere" interval="10s" particles="false" avoid-players="0">
        <renew-filter>
            <any>
                <material>air</material>
            </any>
        </renew-filter>
        <replace-filter>
            <any>
                <material>brick</material>
            </any>
        </replace-filter>
    </renewable>
</renewables>
<respawn delay="2s" auto="true" blackout="true"/>
<disabledamage>
    <!-- Disable fall damage -->
    <damage>fall</damage>
</disabledamage>
</map>

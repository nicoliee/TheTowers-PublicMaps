    </union>
    <!-- por si se quiere usar el tiempo de preparaciÃ³n desde PGM y no desde un plugin -->
    <rectangle id="preparation" min="-9,-16" max="37,20"/>
    <!-- Protections -->
    <union id="spawns">
        <!-- team blue -->
        <cuboid id="blue-spawn-room" min="-54,10,-3" max="-47,22,4"/>

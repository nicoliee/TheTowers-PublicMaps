        <cuboid id="red-pathway-1" min="38,12,0" max="48,14,1"/>
        <cuboid id="red-pathway-2" min="38,12,-2" max="39,14,3"/>
    </union>
    <!-- scoreboxes -->
    <union id="scoreboxes">
        <cuboid id="blue-scorebox" min="-52,20,-1" max="-49,20.5,2"/>
        <cuboid id="red-scorebox" min="50,20,-1" max="53,20.5,2"/>
    </union>
    <!-- map boundaries -->
    <union id="map-boundaries">
        <negative><rectangle min="-59,-22" max="60,23"/></negative>
    </union>
</regions>
<portals pitch="@0">
    <portal filter="only-red" region="blue-scorebox" destination="red-spawn-point" yaw="@90" sound="false" observers="never"/>
    <portal filter="only-blue" region="red-scorebox" destination="blue-spawn-point" yaw="@-90" sound="false" observers="never"/>
</portals>
</map>
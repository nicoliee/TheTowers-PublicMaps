<map proto="1.4.2">
<name>Mini Fast</name>
<version>1.0.0</version>
<created>2023-04-02</created>
<objective>Anota 15 puntos para ganar.</objective>
<gamemode>scorebox</gamemode>
<phase>staging</phase>
<game>The Towers</game>
<include id="gapple-kill-reward"/>
<include id="void-death"/>
<constants>
    <constant id="void-plane">-20</constant>
    <constant id="affect-obs">never</constant>
</constants>
<authors>
    <author uuid="f48faa1f-aab2-44d5-94d2-8b0404f3a227" contribution="Builder"/> <!-- Quijx -->
    <author uuid="0cd8d8fe-8baf-4603-9ea3-4214283b9592" contribution="Edits and XML"/> <!-- nicolieeee -->
</authors>
<teams>
    <team id="red-team" color="dark red" max="25">Red</team>
    <team id="blue-team" color="dark blue" max="25">Blue</team>
</teams>
<filters>
    <team id="only-blue">blue-team</team>
    <team id="only-red">red-team</team>
    <all id="red-scored">
        <team>red-team</team>
        <region id="blue-scorebox"/>
    </all>
    <all id="blue-scored">
        <team>blue-team</team>
        <region id="red-scorebox"/>
        <participating/>
    </all>
</filters>
<kits>
    <kit id="spawn-kit">
        <max-health>20</max-health>
        <item slot="0" unbreakable="true" material="stone sword"/>
        <item slot="1" unbreakable="true" material="bow"/>
        <item slot="2" amount="1" material="golden apple"/>
        <item slot="8" amount="8" material="arrow"/>
        <helmet team-color="true" unbreakable="true" material="leather helmet"/>
        <chestplate team-color="true" unbreakable="true" material="leather chestplate"/>
        <leggings team-color="true" unbreakable="true" enchantment="protection projectile:2" material="chainmail leggings"/>
        <boots team-color="true" unbreakable="true" material="iron boots"/>
        <effect duration="1s" amplifier="10">resistance</effect>
        <game-mode>adventure</game-mode>
        <clear/>
    </kit>
    <kit id="instakill">
        <max-health>1</max-health>
    </kit>
    <kit id="heal">
        <max-health>20</max-health>
        <effect duration="2" amplifier="255">regeneration</effect>
        <action>
            <set var="player_score" value="player_score+1"/>
        </action>
        <action>
            <message actionbar="`7Puntos: `a{amount}">
                <replacements>
                    <decimal id="amount" value="player_score"/>
                </replacements>
            </message>
        </action>
    </kit>
</kits>
<variables>
    <variable id="player_score" scope="player" default="0"/>
</variables>
<stats>
    <stat name="Puntos" value="player_score"/>
</stats>
<spawns>
    <spawn team="blue-team" kit="spawn-kit" region="blue-spawn-point" yaw="0"/>
    <spawn team="red-team" kit="spawn-kit" region="red-spawn-point" yaw="180"/>
    <default yaw="180">
        <regions>
            <point>14.5,17,2.5</point>
        </regions>
    </default>
</spawns>
<regions>
    <point id="blue-spawn-point">14.5, 12, -31.5</point>
    <point id="red-spawn-point">14.5, 12, 36.5</point>
    <!-- scoreboxes -->
    <union id="scoreboxes">
        <cuboid id="blue-scorebox" min="13,20,-33" max="16,20.5,-30"/>
        <cuboid id="red-scorebox" min="13,20,35" max="16,20.5,38"/>
    </union>
    <!-- applications -->
    <apply region="blue-scorebox" kit="heal" filter="only-red"/>
    <apply region="red-scorebox" kit="heal" filter="only-blue"/>
</regions>
<score>
    <limit>15</limit>
    <box value="1" filter="only-red" region="blue-scorebox"/>
    <box value="1" filter="only-blue" region="red-scorebox"/>
</score>
<portals pitch="@0">
    <portal filter="only-red" region="blue-scorebox" destination="red-spawn-point" yaw="@180" sound="false" observers="never"/>
    <portal filter="only-blue" region="red-scorebox" destination="blue-spawn-point" yaw="@0" sound="false" observers="never"/>
</portals>
<respawn delay="1s" auto="true"/>
<toolrepair>
    <tool>stone sword</tool>
    <tool>iron pickaxe</tool>
    <tool>bow</tool>
</toolrepair>
<itemremove>
    <item>leather helmet</item>
    <item>leather chestplate</item>
    <item>chainmail leggings</item>
    <item>iron boots</item>
</itemremove>
<itemkeep>
    <item>golden apple</item>
    <item>arrow</item>
</itemkeep>
<time overtime="2m" max-overtime="3m">10m</time>
<!-- Hunger Disabled -->
<hunger>
    <depletion>off</depletion>
</hunger>
<gamerules>
    <doDaylightCycle>false</doDaylightCycle>
    <doFireTick>false</doFireTick>
</gamerules>
<world>
    <timeset>6000</timeset>
</world>
<kill-rewards>
    <kill-reward>
       	<item amount="4" material="arrow"/>
    </kill-reward>
</kill-rewards>
</map>
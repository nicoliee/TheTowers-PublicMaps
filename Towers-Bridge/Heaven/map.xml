<spawns>
    <spawn team="blue-team" kit="spawn-kit" region="blue-spawn-point" yaw="90"/>
    <spawn team="red-team" kit="spawn-kit" region="red-spawn-point" yaw="-90"/>
    <default yaw="180">
        <regions>
            <point>0.5,27,0.5</point>
        </regions>
    </default>
</spawns>
<regions>
    <point id="blue-spawn-point">35.5,32,0.5</point>
    <point id="red-spawn-point">-34.5,32,0.5</point>
    <union id="spawns">
        <cuboid id="blue-scoreroom" min="33,25,-2" max="38,31,3"/>
        <cuboid id="red-scoreroom" min="-37,25,-2" max="-32,31,3"/>
        <cuboid id="sky" min="-27,30,-oo" max="28,oo,oo"/>
    </union>
    <union id="scoreboxes">
        <cuboid id="blue-scorebox" min="34,25,-1" max="37,25.5,2"/>
        <cuboid id="red-scorebox" min="-33,25,-1" max="-36,25.5,2"/>
    </union>
    <union id="secondfloor">
        <cuboid min="-6,34,-oo" max="7,oo,oo"/>
    </union>
    <apply region="secondfloor" kit="kill"/>
    <union id="map-boundaries">
        <negative><rectangle min="-43,-17" max="44,18"/></negative>
    </union>
</regions>
<portals pitch="@0">
    <portal filter="only-red" region="blue-scorebox" destination="red-spawn-point" yaw="@-90" observers="never"/>
    <portal filter="only-blue" region="red-scorebox" destination="blue-spawn-point" yaw="@90" observers="never"/>
</portals>
</map>
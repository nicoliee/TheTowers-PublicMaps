<map proto="1.4.2">
<name>Alius Bridge</name>
<version>1.1.0</version>
<created>2025-06-15</created>
<objective>Score 10 points to win.</objective>
<game>Towers Bridge</game>
<gamemode>scorebox</gamemode>
<phase>development</phase>
<include id="gapple-kill-reward"/>
<authors>
    <author uuid="2e0d93e1-cd4c-4803-ab24-32e10576eedf"/> <!-- Vearz -->
    <author uuid="387aeb3e-1505-49fd-8696-c0108d452358"/> <!-- Snaz48 -->
    <author uuid="4f3d78b2-a6f6-4dc2-93f7-ff6b5f7c98dd"/> <!-- opKarbone -->
    <author uuid="734715dc-34d2-457b-9858-4bcf8eb62bf5"/> <!-- Nexio -->
    <author uuid="403b7153-24c8-4691-9a25-b0432c3d754a"/> <!-- V12 -->
</authors>
<contributors>
    <contributor uuid="0cd8d8fe-8baf-4603-9ea3-4214283b9592" contribution="XML and adapt to Bridge format"/> <!-- nicolieeee -->
</contributors>
<teams>
    <team id="blue-team" color="dark blue" max="2">Blue</team>
    <team id="red-team" color="dark red" max="2">Red</team>
</teams>
<kits>
    <kit id="spawn-kit">
        <max-health>20</max-health>
        <item slot="0" unbreakable="true" material="stone sword"/>
        <item slot="1" unbreakable="true" material="bow"/>
        <item slot="2" amount="1" material="golden apple"/>
        <item slot="3" unbreakable="true" enchantment="efficiency:2" material="iron pickaxe"/>
        <item slot="4" amount="48" material="brick"/>
        <item slot="8" amount="6" material="arrow"/>
        <helmet team-color="true" unbreakable="true" material="leather helmet"/>
        <chestplate team-color="true" unbreakable="true" material="leather chestplate"/>
        <leggings team-color="true" unbreakable="true" enchantment="protection projectile:2" material="chainmail leggings"/>
        <boots team-color="true" unbreakable="true" material="iron boots"/>
        <effect duration="1s" amplifier="5">resistance</effect>
        <effect duration="1s" amplifier="5">regeneration</effect>
        <clear/>
    </kit>
    <kit id="instakill">
        <max-health>1</max-health>
    </kit>
    <kit id="goal-kit">
        <action>
            <set var="player_score" value="player_score+1"/>
        </action>
        <action>
            <message actionbar="`7Puntos: `a{amount}">
                <replacements>
                    <decimal id="amount" value="player_score"/>
                </replacements>
            </message>
        </action>
    </kit>
</kits>
<filters>
    <team id="only-blue">blue-team</team>
    <team id="only-red">red-team</team>
    <material id="brick">brick</material>
    <players id="at-least-8" min="8" participants="true">
        <participating/>
    </players>
    <all id="red-scored">
        <team>red-team</team>
        <region id="blue-scorebox"/>
    </all>
    <all id="blue-scored">
        <team>blue-team</team>
        <region id="red-scorebox"/>
        <participating/>
    </all>
</filters>
<toolrepair>
    <tool>stone sword</tool>
    <tool>iron pickaxe</tool>
    <tool>bow</tool>
</toolrepair>
<itemremove>
    <item>leather helmet</item>
    <item>leather chestplate</item>
    <item>chainmail leggings</item>
    <item>iron boots</item>
</itemremove>
<itemkeep>
    <item>golden apple</item>
    <item>brick</item>
    <item>arrow</item>
</itemkeep>
<kill-rewards>
    <kill-reward>
        <item amount="8" material="brick"/>
       	<item amount="3" material="arrow"/>
    </kill-reward>
</kill-rewards>
<hunger>
    <depletion>off</depletion>
</hunger>
<renewables>
    <renewable region = "everywhere" interval="10s" particles="false" avoid-players="0">
        <renew-filter>
            <any>
                <material>air</material>
            </any>
        </renew-filter>
        <replace-filter>
            <any>
                <material>brick</material>
            </any>
        </replace-filter>
    </renewable>
</renewables>
<respawns>
  <respawn delay="3s" filter="at-least-8" auto="true" blackout="true"/>
</respawns>
<respawn delay="2s" auto="true" blackout="true"/>
<disabledamage>
    <!-- Disable fall damage -->
    <damage>fall</damage>
</disabledamage>
<modifybowprojectile pickup-filter="never"/>
<maxbuildheight>32</maxbuildheight>
<variables>
    <variable id="player_score" scope="player" default="0"/>
</variables>
<stats>
    <stat name="Puntos" value="player_score"/>
</stats>
<spawns>
    <spawn team="blue-team" kit="spawn-kit" region="blue-spawn-point" yaw="-90"/>
    <spawn team="red-team" kit="spawn-kit" region="red-spawn-point" yaw="90"/>
    <default yaw="180">
        <regions>
            <point>0.5,27,0.5</point>
        </regions>
    </default>
</spawns>
<regions>
    <point id="blue-spawn-point">-34.5,32,0.5</point>
    <point id="red-spawn-point">35.5,32,0.5</point>
    <point id="void2">0, -64, 0</point>
    <union id="spawns">
        <cuboid id="blue-scoreroom" min="-37,25,-2" max="-32,31,3"/>
        <cuboid id="red-scoreroom" min="33,25,-2" max="38,31,3"/>
        <cuboid id="sky" min="-27,30,-oo" max="28,oo,oo"/>
    </union>
    <union id="scoreboxes">
        <cuboid id="blue-scorebox" min="-33,25,-1" max="-36,25.5,2"/>
        <cuboid id="red-scorebox" min="34,25,-1" max="37,25.5,2"/>
    </union>
    <union id="void">
        <cuboid id="void1" min="-oo,-oo,-oo" max="oo,15,oo"/>
    </union>
    <!-- applications -->
    <apply region="spawns" block="never" message="No puedes modificar esta zona."/>
    <apply block="never" message="No puedes salir del mapa.">
        <region>
            <rectangle min="44,oo" max="oo,-oo"/>
            <rectangle min="-43,oo" max="-oo,-oo"/>
            <rectangle min="oo,18" max="-oo,oo"/>
            <rectangle min="oo,-17" max="-oo,-oo"/>
        </region>
    </apply>
    <apply block="deny(not(brick))"/>
    <apply region="void1" lend-kit="instakill"/>
    <apply region="blue-scorebox" kit="goal-kit" filter="only-red"/>
    <apply region="red-scorebox" kit="goal-kit" filter="only-blue"/>
</regions>
<score>
    <limit>10</limit>
    <box value="1" filter="only-red" region="blue-scorebox"/>
    <box value="1" filter="only-blue" region="red-scorebox"/>
</score>
<time overtime="2m" max-overtime="3m">10m</time>
<portals pitch="@0">
    <portal filter="only-red" region="blue-scorebox" destination="red-spawn-point" yaw="@90" observers="never"/>
    <portal filter="only-blue" region="red-scorebox" destination="blue-spawn-point" yaw="@-90" observers="never"/>
    <portal region="void1" destination="void2" sound="false" observers="never"/>
</portals>
</map>